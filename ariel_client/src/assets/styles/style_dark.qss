/*
 * =====================================
 * Ariel - Dark Theme (v3.3 - Patched)
 * =====================================
 */

* {
    color: #dcddde;
    font-family: "Malgun Gothic", sans-serif;
}

/* --- 기본 창 및 레이아웃 --- */
#setupWindow {
    background-color: #202225;
}

#contentWidget {
    background-color: #36393f;
}

#navigationBar {
    background-color: #2f3136;
    border: none;
    border-right: 1px solid #202225;
    padding-top: 20px;
}

#settingsPage, QScrollArea, QScrollArea > QWidget > QWidget {
    background: transparent;
    border: none;
}

/* --- 네비게이션 아이템 --- */
#navigationBar::item {
    border-radius: 6px;
    padding: 5px;
    margin: 3px 8px;
}

#navigationBar::item:selected {
    background-color: #40444b;
}

#navigationBar::item:hover:!selected {
    background-color: #3b3e44;
}

/* --- 버튼 --- */
QPushButton {
    background-color: #4f545c;
    color: #ffffff;
    border: none;
    padding: 8px 16px;
    border-radius: 6px;
    font-size: 13px;
    font-weight: 500;
}

QPushButton:hover {
    background-color: #5d636b;
}

QPushButton:pressed {
    background-color: #4f545c;
}

#primaryButton {
    background-color: #5865f2;
    color: #ffffff;
    font-weight: bold;
}

#primaryButton:hover {
    background-color: #4e5bf0;
}

#secondaryButton {
    background-color: #40444b;
    color: #dcddde;
}

#secondaryButton:hover {
    background-color: #4f545c;
}

#buttonBar {
    background-color: #2f3136;
    border-top: 1px solid #202225;
}

/* --- 라벨 및 텍스트 --- */
QLabel {
    background: transparent;
}

#titleLabel {
    font-size: 24pt;
    font-weight: bold;
    color: #ffffff;
}

#descriptionLabel, #cardDescriptionLabel {
    color: #b9bbbe;
    font-size: 13px;
    padding-bottom: 5px;
}

#navigationItemLabel {
    font-size: 13px;
}

#cardTitleLabel {
    font-size: 11pt;
    font-weight: bold;
    padding-bottom: 5px;
    color: #ffffff;
}

/* --- 입력 위젯 --- */
QLineEdit, QKeySequenceEdit, QComboBox, QSpinBox {
    background-color: #202225;
    border: 1px solid #1a1b1e;
    border-radius: 6px;
    padding: 6px;
    min-height: 20px;
}

QLineEdit:focus, QKeySequenceEdit:focus, QComboBox:focus, QSpinBox:focus {
    border-color: #5865f2;
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 25px;
    border-left: 1px solid #1a1b1e;
    border-top-right-radius: 6px;
    border-bottom-right-radius: 6px;
    background-color: #40444b;
}

QComboBox::drop-down:hover {
    background-color: #4f545c;
}

QComboBox::down-arrow {
    image: url(%ASSET_PATH%/icons/chevron_down_light.svg);
    width: 14px;
    height: 14px;
}

QComboBox QAbstractItemView {
    background-color: #2f3136;
    border: 1px solid #202225;
    selection-background-color: #40444b;
    color: #dcddde;
    selection-color: #ffffff;
}

QSpinBox {
    padding-right: 20px;
}
QSpinBox::up-button, QSpinBox::down-button {
    subcontrol-origin: border; width: 18px; border: none;
}
QSpinBox::up-button {
    subcontrol-position: top right; margin-right: 2px;
    image: url(%ASSET_PATH%/icons/chevron_up_light.svg);
}
QSpinBox::down-button {
    subcontrol-position: bottom right; margin-right: 2px;
    image: url(%ASSET_PATH%/icons/chevron_down_light.svg);
}
QSpinBox::up-button:hover, QSpinBox::down-button:hover {
    background-color: #40444b; border-radius: 2px;
}

/* --- 스크롤바 --- */
QScrollBar:vertical {
    border: none; background: #36393f;
    width: 10px; margin: 0px;
}
QScrollBar::handle:vertical {
    background: #202225; min-height: 20px; border-radius: 5px;
}
QScrollBar::handle:vertical:hover {
    background: #2f3136;
}
QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical,
QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
    border: none; background: none; height: 0px; width: 0px;
}

/* --- 슬라이더 --- */
QSlider::groove:horizontal {
    border: 1px solid #202225; height: 4px;
    background: #202225; margin: 2px 0; border-radius: 2px;
}
QSlider::handle:horizontal {
    background: #5865f2; border: 1px solid #5865f2;
    width: 16px; height: 16px; margin: -7px 0; border-radius: 8px;
}

/* --- 기타 위젯 --- */
#settingsCard {
    background-color: #2f3136;
    border-radius: 8px;
    border: 1px solid #202225;
    padding: 15px;
}

/* --- 시스템 메뉴 (트레이, 메시지박스) --- */
QMenu {
    background-color: #2f3136;
    border: 1px solid #202225;
    color: #dcddde;
    padding: 5px;
    border-radius: 6px;
}
QMenu::item {
    padding: 8px 25px;
    border-radius: 4px;
}
QMenu::item:selected {
    background-color: #5865f2;
    color: #ffffff;
}
QMenu::separator {
    height: 1px;
    background-color: #202225;
    margin: 4px 0px;
}

QMessageBox {
    background-color: #36393f;
}
QMessageBox QLabel {
    color: #dcddde;
    background-color: transparent;
}
QMessageBox QPushButton {
    min-width: 70px;
    background-color: #4f545c;
    color: #ffffff;
    border: none;
}
QMessageBox QPushButton:hover {
    background-color: #5d636b;
}
QMessageBox QPushButton:default {
    background-color: #5865f2;
    border: none;
}
QMessageBox QPushButton:default:hover {
    background-color: #4e5bf0;
}

/* --- [FIX] 특수 대화상자 스타일 --- */
#overlayPreviewDialog {
    background: transparent;
}

QColorDialog {
    background-color: #36393f;
}

/* [수정] QColorDialog의 핵심 콘텐츠 영역 배경을 명시적으로 지정 */
QColorDialog > QWidget {
    background-color: #36393f;
}

QColorDialog QGroupBox {
    background-color: transparent;
    border: none;
}
QColorDialog QLabel, QColorDialog QGroupBox {
    color: #dcddde;
}
QColorDialog QLineEdit, QColorDialog QSpinBox {
    background-color: #2f3136;
    color: #dcddde;
    border: 1px solid #202225;
    border-radius: 4px;
    padding: 4px;
}
QColorDialog QPushButton {
    background-color: #4f545c;
    color: #ffffff;
    border: none;
}
QColorDialog QPushButton:hover {
    background-color: #5d636b;
}
QColorDialog QPushButton[text="OK"], QColorDialog QPushButton[text="Add to Custom Colors"] {
    background-color: #5865f2;
    border: none;
}
QColorDialog QPushButton[text="OK"]:hover, QColorDialog QPushButton[text="Add to Custom Colors"]:hover {
    background-color: #4e5bf0;
}